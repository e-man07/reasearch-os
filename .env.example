# ResearchOS Environment Variables

# Node Environment
NODE_ENV=development

# API Configuration
API_PORT=3000
API_HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/research_os
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Weaviate Configuration
WEAVIATE_URL=https://your-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_CHAT_MODEL=gpt-4-turbo

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI Configuration (optional)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Semantic Scholar API (optional but recommended)
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key

# PubMed API (optional but recommended)
PUBMED_API_KEY=your-pubmed-api-key
PUBMED_EMAIL=your-email@example.com

# GitHub API
GITHUB_TOKEN=your-github-token

# Twitter/X API (optional)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# S3 Configuration (for PDF storage)
S3_BUCKET=research-os-papers
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Authentication
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d

# Email Configuration (for alerts)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@research-os.dev

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
